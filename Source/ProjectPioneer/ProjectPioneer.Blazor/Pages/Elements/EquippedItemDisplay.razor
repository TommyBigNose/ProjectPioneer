@inject ILogger<EquippedItemDisplay> Logger
@inject ProjectPioneer.Systems.IGame ProjectPioneerGame

<table class="table bg-light" style="width: 50%">
    <thead>
        <tr class="@ColorTheme --bs-bg-opacity: .5">
            <th>Equipped @EquippedItemType</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @SymbolHelper.GetEquipmentSymbol(@EquippedItem) | @EquippedItem?.Name | @EquippedItem?.EquipmentType
            </td>
            <td>
                P-Atk: @EquippedItem?.Stats.PhysicalAttack |
                P-Def: @EquippedItem?.Stats.PhysicalDefense | 
                M-Atk: @EquippedItem?.Stats.MagicalAttack | 
                M-Def: @EquippedItem?.Stats.MagicalDefense | 
                Spd: @EquippedItem?.Stats.PhysicalDefense
            </td>
        </tr>
        <tr>
            <td>
                🔥-Atk: @EquippedItem?.Stats.FireAttack |
                🔥-Def: @EquippedItem?.Stats.FireDefense |
                ❄️-Atk: @EquippedItem?.Stats.IceAttack |
                ❄️-Def: @EquippedItem?.Stats.IceDefense
            </td>
            <td>
                ⚡-Atk: @EquippedItem?.Stats.LightningAttack |
                ⚡-Def: @EquippedItem?.Stats.LightningDefense |
                ⛰️-Atk: @EquippedItem?.Stats.EarthAttack |
                ⛰️-Def: @EquippedItem?.Stats.EarthDefense
            </td>
        </tr>
    </tbody>
</table>

@code {
	[Parameter]
	public IEquipment? EquippedItem { get; set; }
    
    [Parameter]
    public string? EquippedItemType { get; set; }
    
    [Parameter]
    public string? ColorTheme { get; set; }

}
